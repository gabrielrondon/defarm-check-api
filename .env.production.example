# Production Environment Variables for Railway
# Copy this to Railway environment variables

# Environment
NODE_ENV=production

# Server
PORT=3000
HOST=0.0.0.0

# Database (PostGIS service on Railway)
# Use Railway's variable reference: ${{caboose.DATABASE_URL}}
DATABASE_URL=postgresql://postgres:password@caboose.proxy.rlwy.net:18740/railway

# Redis (Redis service on Railway)
# Use Railway's internal URL for production: ${{Redis.REDIS_URL}}
# Internal: redis://default:password@redis.railway.internal:6379 (faster, no external traffic)
REDIS_URL=redis://default:YOUR_REDIS_PASSWORD@redis.railway.internal:6379
REDIS_PASSWORD=YOUR_REDIS_PASSWORD

# API Security
# IMPORTANT: Generate a new secure secret for production!
API_SECRET=CHANGE_ME_TO_SECURE_RANDOM_STRING
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000

# External APIs (add when available)
GOOGLE_MAPS_API_KEY=
INPE_API_KEY=
MTE_API_KEY=

# Logging
LOG_LEVEL=info
LOG_PRETTY=false

# Cache
CACHE_ENABLED=true
DEFAULT_CACHE_TTL=3600
